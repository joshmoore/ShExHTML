{
  "type": "Schema",
  "shapes": [
    {
      "type": "Shape",
      "id": ":book",
      "expression": {
        "type": "EachOf",
        "expressions": [
          {
            "type": "TripleConstraint",
            "predicate": "dct:creator",
            "min": 1,
            "max": -1,
            "valueExpr": ":author"
          },
          {
            "type": "TripleConstraint",
            "predicate": "dct:date",
            "valueExpr": {
              "type": "NodeConstraint",
              "datatype": "xsd:date"
            }
          },
          {
            "type": "TripleConstraint",
            "predicate": "dct:subject",
            "valueExpr": {
              "type": "NodeConstraint",
              "values": [
                {
                  "type": "IriStem",
                  "stem": "https://id.loc.gov"
                }
              ]
            }
          },
          {
            "type": "TripleConstraint",
            "predicate": ":status"
          },
          {
            "type": "TripleConstraint",
            "predicate": ":description",
            "min": 1,
            "max": -1,
            "valueExpr": {
              "type": "NodeConstraint",
              "values": [
                {
                  "type": "Language",
                  "languageTag": "fr"
                },
                {
                  "type": "Language",
                  "languageTag": "it"
                },
                {
                  "type": "Language",
                  "languageTag": "en"
                }
              ]
            }
          },
          {
            "type": "TripleConstraint",
            "predicate": ":colors",
            "valueExpr": {
              "type": "NodeConstraint",
              "values": [
                {
                  "value": "blue"
                },
                {
                  "value": "green"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "Shape",
      "id": ":author",
      "expression": {
        "type": "TripleConstraint",
        "predicate": ":status",
        "valueExpr": {
          "type": "NodeConstraint",
          "pattern": "confidential-*"
        }
      }
    }
  ]
}
